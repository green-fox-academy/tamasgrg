<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="utf-8" />
    <title>Gallery project</title>
    <link rel="stylesheet" type="text/css" href="style.css"/>
  </head>

  <body>
    <header>
      <h1>Dublin Bike Polo @ College Green 22/09/2019</h1>
    </header>

    <div id="content">

      <div id="photo-viewer">
        <div class="arrow" id="left-arrow">
          <a href="http://localhost:3000/<%= (getPicIndex(pic) === 0) ? picDb[Object.keys(picDb).length - 1].picSrc : picDb[getPicIndex(pic) - 1].picSrc %>">
            <img src="/assets/arrow.svg">
          </a>
        </div>
        <div id="main-pic">
          <img id="main" src="/assets/pic/<%= pic %>">
          <div id="pic-text">
            <h3 id="title"><%= picDb[getPicIndex(pic)].title %></h3>
            <p id="text"><%= picDb[getPicIndex(pic)].description %></p>
          </div>
        </div>
        <div class="arrow" id="right-arrow">
          <a href="http://localhost:3000/<%= (getPicIndex(pic) === Object.keys(picDb).length - 1) ? picDb[0].picSrc : picDb[getPicIndex(pic) + 1].picSrc %>">
            <img src="/assets/arrow.svg">
          </a>
        </div>        
      </div>

      <div id="thumbnails">
        <% picDb.forEach((element, index) => { %>
        <div id="thumbnail" class=
          <% if (index === getPicIndex(pic)) {%>
          <%= "selected" %>
          <% } %>
        >
          <a href="http://localhost:3000/<%= picDb[index].picSrc %>">
            <img src="/assets/th/<%= picDb[index].thSrc %>">
          </a>
          <span id="tooltip"><%= picDb[index].title %></span>
        </div>
        <% }); %>
      </div>

    </div>

    <script src="event.js"></script>
  </body>
</html>